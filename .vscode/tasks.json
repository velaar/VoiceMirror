{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", "Visual Studio 16 2019", // Adjust generator as per your Visual Studio version
                "-A", "x64",
                "-S", ".",
                "-B", "build"
            ],
            "group": "build",
            "dependsOn": "Run vcvarsall.bat",
            "problemMatcher": [],
            "detail": "Configures the CMake project."
        },
        {
            "label": "CMake Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug"
            ],
            "problemMatcher": ["$msCompile"],
            "detail": "Builds the Debug configuration."
        },
        {
            "label": "CMake Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Release"
            ],
            "problemMatcher": ["$msCompile"],
            "detail": "Builds the Release configuration."
        },
        {
            "label": "CMake Rebuild All",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug",
                "--target", "clean"
            ],
            "dependsOn": [
                "CMake Clean Debug",
                "CMake Build Debug",
                "CMake Clean Release",
                "CMake Build Release"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "detail": "Cleans and builds both Debug and Release configurations."
        },
        // Add other tasks as needed
    ]
}

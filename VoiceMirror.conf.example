# VoiceMirror Configuration File
# All available options are listed below with their default values.
# Uncomment and modify the options as needed.

# ============================
# Essential Configuration
# ============================

# Enable chime sound on sync from Voicemeeter to Windows (default: false)
#chime=false

# Enable debug mode for extensive logging (default: false)
#debug=false

# Specify which Voicemeeter to use (default: 2)
# 1: Voicemeeter
# 2: Voicemeeter Banana
# 3: Voicemeeter Potato
#voicemeeter=2

# Monitor a specific audio device by UUID (default: empty)
#monitor=

# Toggle mute between two channels when device is plugged/unplugged (default: input:0:1)
#toggle=input:0:1

# Enable polling mode with interval in milliseconds (default: 100)
#polling-interval=100

# Play a startup sound after setting the initial volume (default: false)
#startup-sound=false

# Set the initial Windows volume level as a percentage (default: -1, unchanged)
#startup-volume=-1


# ============================
# Optional Configuration
# ============================

# Enable logging to a file (default: false)
# Uncomment the following line to enable logging and specify a log file path.
#log=VoiceMirror.log

# Hide the console window (default: false)
#hidden=false

# ============================
# Additional Settings
# ============================

# List all Voicemeeter channels with their labels and exit (default: false)
#list-channels=false

# List available Voicemeeter virtual inputs and exit (default: false)
#list-inputs=false

# List monitorable audio devices and exit (default: false)
#list-monitor=false

# List available Voicemeeter virtual outputs and exit (default: false)
#list-outputs=false

# Specify the Voicemeeter virtual channel index to use (default: 3)
#index=3

# Specify the type of channel to use ('input' or 'output') (default: 'input')
#type=input

# Show help message and exit (default: false)
#help=false

# Show program's version number and exit (default: false)
#version=false

# Trigger application shutdown (default: false)
#shutdown=false

# Set the maximum allowed volume percentage (default: 100)
#max-volume=100

# Set the minimum allowed volume percentage (default: 0)
#min-volume=0

# Set the maximum dBm for Voicemeeter channel (default: 12.0)
#max=12.0

# Set the minimum dBm for Voicemeeter channel (default: -60.0)
#min=-60.0

# Specify a different configuration file path (if needed)
#config-file=VoiceMirror.conf

# Specify a different log file path (if logging is enabled)
#log-file=VoiceMirror.log

# Enable or disable specific features as needed
#chime=false
#debug=false
#hidden=false
#startup-sound=false
